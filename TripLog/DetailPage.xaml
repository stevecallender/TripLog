<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
            x:Class="TripLog.DetailPage">
<ContentPage.Content>
    <Grid>
            
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <maps:Map x:Name="map" Grid.RowSpan="3"></maps:Map>

        <BoxView Grid.Row="1" BackgroundColor="White" Opacity="0.8"></BoxView>        

        <StackLayout Padding="10" Grid.Row="1">
            <Label x:Name="title" HorizontalOptions="Center"></Label>
            <Label x:Name="date" HorizontalOptions="Center"></Label>
            <Label x:Name="rating" HorizontalOptions="Center"></Label>
            <Label x:Name="notes" HorizontalOptions="Center"></Label>
        </StackLayout>
        
    </Grid>

    
        
        
</ContentPage.Content>

    
</ContentPage>
